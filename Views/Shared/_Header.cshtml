    <!-- Demo content -->
    <div class="demo-content">
        <h1>Header Udemy Việt Nam</h1>
        <p>Đây là header hoàn chỉnh với màu sắc chính xác và trải nghiệm người dùng được nâng cấp</p>
        <button class="toggle-btn" id="toggle-header">Chuyển đổi trạng thái đăng nhập</button>
    </div>

    <script>
        // Categories dropdown
        const categoriesBtn = document.getElementById('categories-btn');
        const categoriesDropdown = document.getElementById('categories-dropdown');
        const categoriesBtnLogged = document.getElementById('categories-btn-logged');
        const categoriesDropdownLogged = document.getElementById('categories-dropdown-logged');

        categoriesBtn.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            categoriesDropdown.classList.toggle('active');
            categoriesBtn.classList.toggle('active');
        });

        categoriesBtnLogged.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            categoriesDropdownLogged.classList.toggle('active');
            categoriesBtnLogged.classList.toggle('active');
        });

        // User dropdown
        const userAvatar = document.getElementById('user-avatar');
        const userDropdown = document.getElementById('user-dropdown');

        if (userAvatar) {
            userAvatar.addEventListener('click', (e) => {
                e.stopPropagation();
                userDropdown.classList.toggle('active');
            });
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', () => {
            categoriesDropdown.classList.remove('active');
            categoriesDropdownLogged.classList.remove('active');
            categoriesBtn.classList.remove('active');
            categoriesBtnLogged.classList.remove('active');
            if (userDropdown) {
                userDropdown.classList.remove('active');
            }
        });

        // Toggle between logged in and logged out
        const headerLoggedOut = document.getElementById('header-logged-out');
        const headerLoggedIn = document.getElementById('header-logged-in');
        const toggleBtn = document.getElementById('toggle-header');

        toggleBtn.addEventListener('click', () => {
            headerLoggedOut.classList.toggle('hidden');
            headerLoggedIn.classList.toggle('hidden');
        });

        // Header scroll effect
        window.addEventListener('scroll', () => {
            const headers = document.querySelectorAll('.header:not(.hidden)');
            headers.forEach(header => {
                if (window.scrollY > 10) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });
        });

        // Add some sample interaction for buttons
        document.querySelectorAll('.btn').forEach(button => {
            button.addEventListener('click', function() {
                if (this.classList.contains('btn-primary')) {
                    alert('Chức năng đăng ký sẽ được thực hiện!');
                } else {
                    alert('Chức năng đăng nhập sẽ được thực hiện!');
                }
            });
        });
    </script>
