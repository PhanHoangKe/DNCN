@model EduFlex.Models.Course

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm Khóa Học</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thông Tin Khóa Học</h5>

                        <form asp-area="Admin" asp-controller="Course" asp-action="Create" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label asp-for="CourseTitle" class="form-label">Tiêu đề *</label>
                                <input asp-for="CourseTitle" class="form-control" placeholder="Nhập tiêu đề khóa học" />
                                <span asp-validation-for="CourseTitle" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Slug" class="form-label">Slug *</label>
                                <input asp-for="Slug" class="form-control" placeholder="Nhập slug (ví dụ: khoa-hoc-lap-trinh)" />
                                <span asp-validation-for="Slug" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ShortDescription" class="form-label">Mô tả ngắn</label>
                                <textarea asp-for="ShortDescription" class="form-control" rows="3" placeholder="Nhập mô tả ngắn"></textarea>
                                <span asp-validation-for="ShortDescription" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="FullDescription" class="form-label">Mô tả chi tiết</label>
                                <textarea asp-for="FullDescription" class="form-control" rows="5" placeholder="Nhập mô tả chi tiết"></textarea>
                                <span asp-validation-for="FullDescription" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Thumbnail</label>
                                <input type="file" name="courseFile" class="form-control" accept="image/*" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Price" class="form-label">Giá (VNĐ)</label>
                                <input asp-for="Price" type="number" step="1000" class="form-control" placeholder="Nhập giá khóa học" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DiscountPrice" class="form-label">Giá giảm (VNĐ)</label>
                                <input asp-for="DiscountPrice" type="number" step="1000" class="form-control" placeholder="Nhập giá giảm (nếu có)" />
                                <span asp-validation-for="DiscountPrice" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input asp-for="IsFree" class="form-check-input" type="checkbox" />
                                <label asp-for="IsFree" class="form-check-label">Khóa học miễn phí</label>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CategoryId" class="form-label">Danh mục *</label>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">-- Chọn danh mục --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="InstructorId" class="form-label">Giảng viên *</label>
                                <select asp-for="InstructorId" class="form-select" asp-items="ViewBag.Instructors">
                                    <option value="">-- Chọn giảng viên --</option>
                                </select>
                                <span asp-validation-for="InstructorId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="LevelId" class="form-label">Cấp độ *</label>
                                <select asp-for="LevelId" class="form-select" asp-items="ViewBag.Levels">
                                    <option value="">-- Chọn cấp độ --</option>
                                </select>
                                <span asp-validation-for="LevelId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Language" class="form-label">Ngôn ngữ</label>
                                <input asp-for="Language" class="form-control" placeholder="Nhập ngôn ngữ (ví dụ: Tiếng Việt)" />
                                <span asp-validation-for="Language" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Duration" class="form-label">Thời lượng (phút)</label>
                                <input asp-for="Duration" type="number" class="form-control" placeholder="Nhập thời lượng khóa học" />
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="TotalLessons" class="form-label">Tổng số bài học</label>
                                <input asp-for="TotalLessons" type="number" class="form-control" placeholder="Nhập tổng số bài học" />
                                <span asp-validation-for="TotalLessons" class="text-danger"></span>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Lưu</button>
                                <a asp-area="Admin" asp-controller="Course" asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-x-circle"></i> Hủy</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function() {
            $('form').on('submit', function(e) {
                if (!$('#CategoryId').val()) {
                    e.preventDefault();
                    alert('Vui lòng chọn danh mục!');
                    $('#CategoryId').focus();
                    return false;
                }
                if (!$('#InstructorId').val()) {
                    e.preventDefault();
                    alert('Vui lòng chọn giảng viên!');
                    $('#InstructorId').focus();
                    return false;
                }
                if (!$('#LevelId').val()) {
                    e.preventDefault();
                    alert('Vui lòng chọn cấp độ!');
                    $('#LevelId').focus();
                    return false;
                }
            });
        });
    </script>
}