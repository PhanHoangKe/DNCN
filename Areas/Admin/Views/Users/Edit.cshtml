@model EduFlex.Models.User

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>@ViewData["Title"]</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thông Tin Tài Khoản</h5>

                        <form asp-area="Admin" asp-controller="Users" asp-action="Edit" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="UserId" />

                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label">Họ và tên *</label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Avatar</label>
                                <input type="file" name="avatarFile" class="form-control" accept="image/*" />
                                @if (!string.IsNullOrEmpty(Model.Avatar))
                                {
                                    <img src="@Model.Avatar" alt="Avatar" class="mt-2" style="width:80px; height:80px; object-fit:cover;" />
                                }
                            </div>

                            <div class="mb-3">
                                <label asp-for="Bio" class="form-label">Tiểu sử</label>
                                <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Bio" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email *</label>
                                <input asp-for="Email" type="email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
    <label asp-for="PasswordHash" class="form-label">Mật khẩu (để trống nếu không đổi)</label>
    <input asp-for="PasswordHash" type="password" class="form-control" />
    <span asp-validation-for="PasswordHash" class="text-danger"></span>
</div>


                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="RoleId" class="form-label">Vai trò *</label>
                                <select asp-for="RoleId" class="form-select" asp-items="ViewBag.Roles">
                                    <option value="">-- Chọn vai trò --</option>
                                </select>
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">Kích hoạt tài khoản</label>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Lưu</button>
                                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-x-circle"></i> Hủy</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
