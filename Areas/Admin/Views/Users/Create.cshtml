@model EduFlex.Models.User

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>@ViewData["Title"]</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thông Tin Tài Khoản</h5>

                        <form asp-area="Admin" asp-controller="Users" asp-action="Create" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label">Họ và tên *</label>
                                <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Avatar</label>
                                <input type="file" name="avatarFile" class="form-control" accept="image/*" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Bio" class="form-label">Tiểu sử</label>
                                <textarea asp-for="Bio" class="form-control" rows="3" placeholder="Nhập tiểu sử"></textarea>
                                <span asp-validation-for="Bio" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email *</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PasswordHash" class="form-label">Mật khẩu *</label>
                                <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                                <span asp-validation-for="PasswordHash" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="RoleId" class="form-label">Vai trò *</label>
                                <select asp-for="RoleId" class="form-select" asp-items="ViewBag.Roles">
                                    <option value="">-- Chọn vai trò --</option>
                                </select>
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input name="IsActive" class="form-check-input" type="checkbox" value="true" @(Model?.IsActive == true ? "checked" : "") />
                                <input type="hidden" name="IsActive" value="false" />
                                <label class="form-check-label">Kích hoạt tài khoản</label>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Lưu</button>
                                <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-x-circle"></i> Hủy</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Kiểm tra RoleId trước khi submit
        $(function() {
            $('form').on('submit', function(e) {
                if (!$('#RoleId').val()) {
                    e.preventDefault();
                    alert('Vui lòng chọn vai trò!');
                    $('#RoleId').focus();
                }
            });
        });
    </script>
}
