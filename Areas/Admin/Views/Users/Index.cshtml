@model IEnumerable<EduFlex.Models.User>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh Sách Tài Khoản</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a class="btn btn-success" asp-area="Admin" asp-controller="Users" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>Thêm tài khoản
                        </a>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="card-body mt-4">
                        <table class="table table-hover table-bordered datatable" style="background-color: white;">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">ID</th>
                                    <th class="text-center">Avatar</th>
                                    <th class="text-center">Email</th>
                                    <th class="text-center">Họ và tên</th>
                                    <th class="text-center">Số điện thoại</th>
                                    <th class="text-center">Vai trò</th>
                                    <th class="text-center">Trạng thái</th>
                                    <th class="text-center">Ngày tạo</th>
                                    <th class="text-center">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var u in Model)
                                {
                                    <tr class="table-row">
                                        <td class="text-center align-middle">@u.UserId</td>
                                        <td class="text-center align-middle">
                                            @if (!string.IsNullOrEmpty(u.Avatar))
                                            {
                                                <img src="@u.Avatar" 
                                                     alt="Avatar @u.FullName" 
                                                     class="rounded-circle" 
                                                     style="width: 40px; height: 40px; object-fit: cover;"
                                                     onerror="this.src='/uploads/avatars/default.png';" />
                                            }
                                            else
                                            {
                                                <img src="/uploads/avatars/default.png" 
                                                     alt="Default Avatar" 
                                                     class="rounded-circle" 
                                                     style="width: 40px; height: 40px; object-fit: cover;" />
                                            }
                                        </td>
                                        <td class="text-center align-middle text-primary">@u.Email</td>
                                        <td class="text-center align-middle">@u.FullName</td>
                                        <td class="text-center align-middle">
                                            @if (!string.IsNullOrEmpty(u.PhoneNumber))
                                            {
                                                @u.PhoneNumber
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có</span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            @if (u.Role != null)
                                            {
                                                <span class="badge bg-info">@u.Role.RoleName</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Chưa có</span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            @if (u.IsActive ?? false)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Hoạt động
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle me-1"></i>Khóa
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">@(u.CreatedAt?.ToString("dd/MM/yyyy"))</td>
                                        <td class="text-center align-middle">
                                            <div class="btn-group" role="group">
                                                <a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@u.UserId"
                                                   class="btn btn-primary btn-sm" title="Chỉnh sửa tài khoản">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@u.UserId"
                                                   class="btn btn-danger btn-sm" title="Xóa tài khoản">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    .table td {
        vertical-align: middle;
    }
    
    .table-row:hover {
        background-color: #f8f9fa;
    }
    
    .btn-group .btn {
        margin: 0 2px;
    }
    
    img.rounded-circle {
        border: 2px solid #dee2e6;
    }
</style>