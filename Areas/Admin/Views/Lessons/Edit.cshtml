@model EduFlex.Models.Lesson

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chỉnh Sửa Bài Giảng";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>@ViewData["Title"]</h2>
    </div>
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thông tin bài giảng</h5>

                        <form asp-area="Admin" asp-controller="Lessons" asp-action="Edit" method="post">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="LessonId" />

                            <div class="mb-3">
                                <label asp-for="LessonTitle" class="form-label">Tiêu đề bài giảng *</label>
                                <input asp-for="LessonTitle" class="form-control" required />
                                <span asp-validation-for="LessonTitle" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Mô tả</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="SectionId" class="form-label">Section *</label>
                                    <select asp-for="SectionId" class="form-select" asp-items="ViewBag.Sections"
                                        required>
                                        <option value="" disabled>-- Chọn Section --</option>
                                    </select>
                                    <span asp-validation-for="SectionId" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="TypeId" class="form-label">Loại bài giảng</label>
                                    <select asp-for="TypeId" class="form-select" asp-items="ViewBag.LessonTypes"
                                        required>
                                        <option value="" disabled>-- Chọn loại --</option>
                                    </select>
                                    <span asp-validation-for="TypeId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="VideoUrl" class="form-label">URL Video</label>
                                    <input asp-for="VideoUrl" class="form-control" />ọ
                                    <span asp-validation-for="VideoUrl" class="text-danger"></span>
                                    <div class="form-text">URL video của bài giảng (không bắt buộc)</div>
                                    @if (!string.IsNullOrEmpty(Model.VideoUrl))
                                    {
                                        <div class="mt-2">
                                            <a href="@Model.VideoUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-play-circle me-1"></i>Xem video
                                            </a>
                                        </div>
                                    }
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="ContentUrl" class="form-label">URL Nội dung</label>
                                    <input asp-for="ContentUrl" class="form-control" />
                                    <span asp-validation-for="ContentUrl" class="text-danger"></span>
                                    <div class="form-text">URL tài liệu hoặc nội dung khác (không bắt buộc)</div>
                                    @if (!string.IsNullOrEmpty(Model.ContentUrl))
                                    {
                                        <div class="mt-2">
                                            <a href="@Model.ContentUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-file-earmark me-1"></i>Xem nội dung
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label asp-for="Duration" class="form-label">Thời lượng (phút)</label>
                                    <input asp-for="Duration" type="number" class="form-control" min="0" />
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label asp-for="DisplayOrder" class="form-label">Thứ tự hiển thị</label>
                                    <input asp-for="DisplayOrder" type="number" class="form-control" min="0" />
                                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Trạng  thái</label>
                                    <div class="form-check mt-2">
                                        <input type="hidden" name="IsFree" value="false" />
                                        <input type="checkbox" name="IsFree" id="IsFree" value="true"
                                            class="form-check-input" @(Model.IsFree == true ? "checked" : "") />
                                        <label class="form-check-label" for="IsFree">Miễn phí</label>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Thông tin khác</label>
                                <div class="form-text">
                                    <strong>Ngày tạo:</strong> @Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")<br />
                                    <strong>Cập  nhật lần cuối:</strong> @Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Lưu</button>
                                <a asp-area="Admin" asp-controller="Lessons" asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-x-circle"></i> Hủy</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
