</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Ki?m tra c?c tr??ng b?t bu?c tr??c khi submit
        $(function() {
            $('form').on('submit', function(e) {
                if (!$('#LessonTitle').val().trim()) {
                    e.preventDefault();
                    alert('Vui l?ng nh?p ti?u ?? b?i gi?ng!');
                    $('#LessonTitle').focus();
                    return false;
                }
                
                if (!$('#SectionId').val()) {
