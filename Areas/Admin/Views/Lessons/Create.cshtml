@model EduFlex.Models.Lesson

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thêm Bài Giảng Mới";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>@ViewData["Title"]</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thông Tin Bài Giảng</h5>

                        <form asp-area="Admin" asp-controller="Lessons" asp-action="Create" method="post">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="mb-3">
                                <label asp-for="LessonTitle" class="form-label">Tiêu đề bài giảng *</label>
                                <input asp-for="LessonTitle" class="form-control" placeholder="Nhập tiêu đề bài giảng"
                                    required />
                                <span asp-validation-for="LessonTitle" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Mô tả</label>
                                <textarea asp-for="Description" class="form-control" rows="3"
                                    placeholder="Nhập mô tả cho bài giảng"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="SectionId" class="form-label">Phần (Section) *</label>
                                    <select asp-for="SectionId" class="form-select" asp-items="ViewBag.Sections"
                                        required>
                                        <option value="" disabled selected>-- Chọn phần --</option>
                                    </select>
                                    <span asp-validation-for="SectionId" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="TypeId" class="form-label">Loại bài giảng *</label>
                                    <select asp-for="TypeId" class="form-select" asp-items="ViewBag.LessonTypes"
                                        required>
                                        <option value="" disabled selected>-- Chọn loại --</option>
                                    </select>
                                    <span asp-validation-for="TypeId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="VideoUrl" class="form-label">Đường dẫn video</label>
                                    <input asp-for="VideoUrl" class="form-control"
                                        placeholder="Nhập URL video (YouTube, Vimeo...)" />
                                    <span asp-validation-for="VideoUrl" class="text-danger"></span>
                                    <div class="form-text">Đường dẫn video của bài giảng (không bắt buộc)</div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="ContentUrl" class="form-label">Đường dẫn nội dung</label>
                                    <input asp-for="ContentUrl" class="form-control" placeholder="Nhập URL nội dung" />
                                    <span asp-validation-for="ContentUrl" class="text-danger"></span>
                                    <div class="form-text">URL tài liệu hoặc nội dung khác (không bắt buộc)</div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label asp-for="Duration" class="form-label">Thời lượng (phút)</label>
                                    <input asp-for="Duration" type="number" class="form-control" min="0" placeholder="0" />
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label asp-for="DisplayOrder" class="form-label">Thứ tự hiển thị</label>
                                    <input asp-for="DisplayOrder" type="number" class="form-control" min="0" placeholder="0" />
                                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                    <div class="form-text">Nếu để trống, hệ thống sẽ tự động gán thứ tự tiếp theo</div>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <div class="form-check mt-2">
                                        <input type="hidden" name="IsFree" value="false" />
                                        <input type="checkbox" name="IsFree" id="IsFree" value="true"
                                            class="form-check-input" />
                                        <label class="form-check-label" for="IsFree">Miễn phí</label>
                                    </div>
                                </div>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Lưu
                                </button>
                                <a asp-area="Admin" asp-controller="Lessons" asp-action="Index"
                                    class="btn btn-secondary ms-2">
                                    <i class="bi bi-x-circle"></i> Hủy
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Kiểm tra các trường bắt buộc trước khi gửi form
        $(function () {
            $('form').on('submit', function (e) {
                if (!$('#LessonTitle').val().trim()) {
                    e.preventDefault();
                    alert('Vui lòng nhập tiêu đề bài giảng!');
                    $('#LessonTitle').focus();
                    return false;
                }

                if (!$('#SectionId').val()) {
                    e.preventDefault();
                    alert('Vui lòng chọn phần (Section)!');
                    $('#SectionId').focus();
                    return false;
                }

                if (!$('#TypeId').val()) {
                    e.preventDefault();
                    alert('Vui lòng chọn loại bài giảng!');
                    $('#TypeId').focus();
                    return false;
                }
            });
        });
    </script>
}
