@model IEnumerable<EduFlex.Models.Lesson>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh Sách Bài Giảng</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a class="btn btn-success" asp-area="Admin" asp-controller="Lessons" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>Thêm bài giảng
                        </a>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="card-body mt-4">
                        @if (Model == null || !Model.Any())
                        {
                            <div class="alert alert-info text-center">
                                <i class="bi bi-info-circle me-2"></i>
                                Chưa có bài giảng nào. <a asp-area="Admin" asp-controller="Lessons" asp-action="Create">Thêm bài giảng đầu tiên</a>
                            </div>
                        }
                        else
                        {
                        <table class="table table-hover table-bordered datatable" style="background-color: white;">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">ID</th>
                                    <th class="text-center">Tiêu đề</th>
                                    <th class="text-center">Mô tả</th>
                                    <th class="text-center">Khóa học</th>
                                    <th class="text-center">Phần học</th>
                                    <th class="text-center">Loại</th>
                                    <th class="text-center">Thời lượng</th>
                                    <th class="text-center">Miễn phí</th>
                                    <th class="text-center">Thứ tự</th>
                                    <th class="text-center">Ngày tạo</th>
                                    <th class="text-center">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var lesson in Model)
                                {
                                    <tr class="table-row">
                                        <td class="text-center align-middle">@lesson.LessonId</td>
                                        <td class="text-center align-middle text-primary fw-bold">@lesson.LessonTitle</td>
                                        <td class="text-center align-middle">
                                            @if (!string.IsNullOrEmpty(lesson.Description))
                                            {
                                                <span title="@lesson.Description">
                                                    @(lesson.Description.Length > 50 ? lesson.Description.Substring(0, 50) + "..." : lesson.Description)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có mô tả</span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            @if (lesson.Section?.Course != null)
                                            {
                                                <span class="badge bg-info">@lesson.Section.Course.CourseTitle</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Chưa có</span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            @if (lesson.Section != null)
                                            {
                                                <small>@lesson.Section.SectionTitle</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có</span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="badge bg-secondary">@lesson.Type?.TypeName</span>
                                        </td>
                                        <td class="text-center align-middle">
                                            @if (lesson.Duration.HasValue)
                                            {
                                                <span>@lesson.Duration phút</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            @if (lesson.IsFree == true)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Có
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle me-1"></i>Không
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">@(lesson.DisplayOrder ?? 0)</td>
                                        <td class="text-center align-middle">@lesson.CreatedAt?.ToString("dd/MM/yyyy")</td>

                                        <td class="text-center align-middle">
                                            <div class="btn-group" role="group">
                                                <a asp-area="Admin" asp-controller="Lessons" asp-action="Edit" asp-route-id="@lesson.LessonId"
                                                   class="btn btn-primary btn-sm" title="Chỉnh sửa bài giảng">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-area="Admin" asp-controller="Lessons" asp-action="Delete" asp-route-id="@lesson.LessonId"
                                                   class="btn btn-danger btn-sm" title="Xóa bài giảng">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    .table td {
        vertical-align: middle;
    }

    .table-row:hover {
        background-color: #f8f9fa;
    }

    .btn-group .btn {
        margin: 0 2px;
    }
</style>
