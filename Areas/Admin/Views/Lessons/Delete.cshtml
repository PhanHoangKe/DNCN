@model EduFlex.Models.Lesson

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Xóa Bài Giảng";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>@ViewData["Title"]</h2>
    </div>

    <section class="section dashboard">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thông Tin Bài Giảng</h5>

                        <form asp-action="Delete" method="post" onsubmit="return confirmDelete()">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="LessonId" />

                            <div class="mb-3">
                                <label class="form-label">Tiêu đề bài giảng</label>
                                <input class="form-control" value="@Model.LessonTitle" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Mô tả</label>
                                <textarea class="form-control" rows="3" readonly>@(Model.Description ?? "Chưa có mô tả")</textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Khóa học</label>
                                    <input class="form-control" value="@(Model.Section?.Course?.CourseTitle ?? "N/A")" readonly />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Phần (Section)</label>
                                    <input class="form-control" value="@(Model.Section?.SectionTitle ?? "N/A")" readonly />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Loại bài giảng</label>
                                    <input class="form-control" value="@(Model.Type?.TypeName ?? "N/A")" readonly />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Thời lượng</label>
                                    <input class="form-control" value="@(Model.Duration.HasValue ? Model.Duration + " phút" : "Chưa có")" readonly />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Miễn phí</label>
                                    <input class="form-control" value="@(Model.IsFree == true ? "Có" : "Không")" readonly />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Thứ tự hiển thị</label>
                                    <input class="form-control" value="@(Model.DisplayOrder ?? 0)" readonly />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Ngày tạo</label>
                                <input class="form-control" value="@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")" readonly />
                            </div>

                            @if (ViewBag.RelatedCount != null && ViewBag.RelatedCount > 0)
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold text-danger">Dữ liệu liên quan (@ViewBag.RelatedCount mục)</label>
                                    <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                                        @if (ViewBag.HasAttachments == true)
                                        {
                                            <div class="d-flex justify-content-between align-items-center py-1 border-bottom">
                                                <span><i class="bi bi-paperclip me-2"></i>Tệp đính kèm</span>
                                                <span class="badge bg-warning">@Model.LessonAttachments.Count</span>
                                            </div>
                                        }
                                        @if (ViewBag.HasComments == true)
                                        {
                                            <div class="d-flex justify-content-between align-items-center py-1 border-bottom">
                                                <span><i class="bi bi-chat-left-text me-2"></i>Bình luận</span>
                                                <span class="badge bg-info">@Model.LessonComments.Count</span>
                                            </div>
                                        }
                                        @if (ViewBag.HasProgress == true)
                                        {
                                            <div class="d-flex justify-content-between align-items-center py-1 border-bottom">
                                                <span><i class="bi bi-clock-history me-2"></i>Tiến trình học</span>
                                                <span class="badge bg-primary">@Model.LessonProgresses.Count</span>
                                            </div>
                                        }
                                        @if (ViewBag.HasQuizzes == true)
                                        {
                                            <div class="d-flex justify-content-between align-items-center py-1 border-bottom">
                                                <span><i class="bi bi-question-circle me-2"></i>Số lượng câu hỏi</span>
                                                <span class="badge bg-danger">@Model.Quizzes.Count</span>
                                            </div>
                                        }
                                    </div>
                                    <div class="form-text text-muted mt-2">
                                        <strong>Lưu ý:</strong> Tất cả dữ liệu liên quan sẽ bị xóa cùng với bài giảng này.
                                    </div>
                                </div>
                            }

                            <div class="alert alert-warning" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác. 
                                @if (ViewBag.RelatedCount != null && ViewBag.RelatedCount > 0)
                                {
                                    <span>Bài giảng và tất cả dữ liệu liên quan (@ViewBag.RelatedCount mục) sẽ bị xóa vĩnh viễn.</span>
                                }
                                else
                                {
                                    <span>Bài giảng sẽ bị xóa vĩnh viễn.</span>
                                }
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-danger" id="confirmDeleteBtn">
                                    <i class="bi bi-trash"></i> Xác nhận xóa
                                </button>
                                <a asp-action="Index" class="btn btn-secondary ms-2">
                                    <i class="bi bi-x-circle"></i> Hủy
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    .form-control[readonly] {
        background-color: #e9ecef;
        opacity: 1;
    }
    .alert-warning {
        border-left: 4px solid #ffc107;
    }
</style>

@section Scripts {
    <script>
        function confirmDelete() {
            var lessonTitle = '@Model.LessonTitle';
            var relatedCount = @(ViewBag.RelatedCount ?? 0);
            
            var confirmMessage = '';

            if (relatedCount > 0) {
                confirmMessage = `Bạn có chắc chắn muốn xóa bài giảng "${lessonTitle}" không?\n\n` +
                    'Hành động này KHÔNG THỂ hoàn tác và sẽ xóa vĩnh viễn:\n' +
                    `• Bài giảng: ${lessonTitle}\n` +
                    `• Số dữ liệu liên quan: ${relatedCount} mục`;
            } else {
                confirmMessage = `Bạn có chắc chắn muốn xóa bài giảng "${lessonTitle}" không?\n\n` +
                    'Hành động này KHÔNG THỂ hoàn tác!';
            }

            return confirm(confirmMessage);
        }
    </script>
}
