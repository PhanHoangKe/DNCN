@model IEnumerable<EduFlex.Models.Categories>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh Sách Danh Mục Khóa Học</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a class="btn btn-success" asp-area="Admin" asp-controller="CourseCategory" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i> Thêm danh mục
                        </a>
                    </div>

                    <div class="card-body mt-4">
                        <table class="table table-hover table-bordered datatable" style="background-color: white;">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">ID</th>
                                    <th>Tên danh mục</th>
                                    <th>Danh mục cha</th>
                                    <th>Mô tả</th>
                                    <th>Biểu tượng</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày tạo</th>
                                    <th class="text-center">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var c in Model)
                                {
                                    <tr>
                                        <td class="text-center">@c.CategoryId</td>
                                        <td>@c.CategoryName</td>
                                        <td>@(c.ParentCategory != null ? c.ParentCategory.CategoryName : "—")</td>
                                        <td>@(string.IsNullOrEmpty(c.Description) ? "Không có" : c.Description)</td>
                                        <td class="text-center">
                                            @if (!string.IsNullOrEmpty(c.Icon))
                                            {
                                                <img src="@c.Icon" alt="@c.CategoryName" style="width:40px;height:40px;object-fit:cover;border-radius:5px;" />
                                            }
                                            else
                                            {
                                                <span class="text-muted">Không có</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (c.IsActive == true)
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Ẩn</span>
                                            }
                                        </td>
                                        <td class="text-center">@c.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-area="Admin" asp-controller="CourseCategory" asp-action="Edit" asp-route-id="@c.CategoryId" class="btn btn-primary btn-sm" title="Chỉnh sửa">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-area="Admin" asp-controller="CourseCategory" asp-action="Delete" asp-route-id="@c.CategoryId" class="btn btn-danger btn-sm" title="Xóa">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    .table td {
        vertical-align: middle;
    }

    .table-row:hover {
        background-color: #f8f9fa;
    }

    .btn-group .btn {
        margin: 0 2px;
    }

    img {
        border: 1px solid #dee2e6;
    }
</style>
