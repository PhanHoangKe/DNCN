@model EduFlex.Models.Course

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chỉnh Sửa Khóa Học</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thông Tin Khóa Học</h5>

                        <form asp-area="Admin" asp-controller="Course" asp-action="Edit" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="CourseId" />

                            <div class="mb-3">
                                <label asp-for="CourseTitle" class="form-label">Tiêu đề *</label>
                                <input asp-for="CourseTitle" class="form-control" />
                                <span asp-validation-for="CourseTitle" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Slug" class="form-label">Slug *</label>
                                <input asp-for="Slug" class="form-control" />
                                <span asp-validation-for="Slug" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ShortDescription" class="form-label">Mô tả ngắn</label>
                                <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="ShortDescription" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="FullDescription" class="form-label">Mô tả chi tiết</label>
                                <textarea asp-for="FullDescription" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="FullDescription" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Ảnh</label>
                                <input type="file" name="courseFile" class="form-control" accept="image/*" />
                                @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                                {
                                    <img src="@Model.ThumbnailUrl" alt="Thumbnail" class="mt-2 rounded" style="width:80px; height:80px; object-fit:cover;" />
                                }
                            </div>

                            <div class="mb-3">
    <label asp-for="Price" class="form-label">Giá (VNĐ)</label>
    <input asp-for="Price" type="number" step="any" class="form-control" value="@(Model.Price.HasValue ? Model.Price.Value.ToString("F0") : "")" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="DiscountPrice" class="form-label">Giá giảm (VNĐ)</label>
    <input asp-for="DiscountPrice" type="number" step="any" class="form-control" value="@(Model.DiscountPrice.HasValue ? Model.DiscountPrice.Value.ToString("F0") : "")" />
    <span asp-validation-for="DiscountPrice" class="text-danger"></span>
</div>

                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" id="IsFree"
           name="IsFree" value="true" @(Model.IsFree == true ? "checked" : "") />
    <label for="IsFree" class="form-check-label">Khóa học miễn phí</label>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CategoryId" class="form-label">Danh mục *</label>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Category">
                                    <option value="">-- Chọn danh mục --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="InstructorId" class="form-label">Giảng viên *</label>
                                <select asp-for="InstructorId" class="form-select" asp-items="ViewBag.Instructors">
                                    <option value="">-- Chọn giảng viên --</option>
                                </select>
                                <span asp-validation-for="InstructorId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="LevelId" class="form-label">Cấp độ *</label>
                                <select asp-for="LevelId" class="form-select" asp-items="ViewBag.Levels">
                                    <option value="">-- Chọn cấp độ --</option>
                                </select>
                                <span asp-validation-for="LevelId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Language" class="form-label">Ngôn ngữ</label>
                                <input asp-for="Language" class="form-control" />
                                <span asp-validation-for="Language" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Duration" class="form-label">Thời lượng (phút)</label>
                                <input asp-for="Duration" type="number" class="form-control" />
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="TotalLessons" class="form-label">Tổng số bài học</label>
                                <input asp-for="TotalLessons" type="number" class="form-control" />
                                <span asp-validation-for="TotalLessons" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" id="IsPublished"
           name="IsPublished" value="true" @(Model.IsPublished == true ? "checked" : "") />
    <label for="IsPublished" class="form-check-label">Xuất bản khóa học</label>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Lưu</button>
                                <a asp-area="Admin" asp-controller="Course" asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-x-circle"></i> Hủy</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function() {
            $('form').on('submit', function(e) {
                if (!$('#CategoryId').val()) {
                    e.preventDefault();
                    alert('Vui lòng chọn danh mục!');
                    $('#CategoryId').focus();
                    return false;
                }
                if (!$('#InstructorId').val()) {
                    e.preventDefault();
                    alert('Vui lòng chọn giảng viên!');
                    $('#InstructorId').focus();
                    return false;
                }
                if (!$('#LevelId').val()) {
                    e.preventDefault();
                    alert('Vui lòng chọn cấp độ!');
                    $('#LevelId').focus();
                    return false;
                }
            });
        });
    </script>
}