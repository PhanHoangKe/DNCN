@model EduFlex.Areas.Admin.ViewModels.CourseCreateViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Tạo khóa học mới";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>@ViewData["Title"]</h2>
    </div>

    <section class="section dashboard">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm">
                    <div class="card-body p-5">
                        <form asp-action="Create" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()

                            <div class="row">
                                <div class="col-md-8">
                                    <div class="mb-4">
                                        <label asp-for="CourseTitle" class="form-label fw-bold"></label>
                                        <input asp-for="CourseTitle" class="form-control form-control-lg" placeholder="VD: Lập trình Python từ A-Z" />
                                        <span asp-validation-for="CourseTitle" class="text-danger"></span>
                                    </div>

                                    <div class="mb-4">
                                        <label asp-for="Slug" class="form-label fw-bold"></label>
                                        <input asp-for="Slug" class="form-control" placeholder="lap-trinh-python-tu-a-z" />
                                        <span asp-validation-for="Slug" class="text-danger"></span>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <label asp-for="CategoryId" class="form-label fw-bold"></label>
                                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Category">
                                                <option value="">-- Chọn danh mục --</option>
                                            </select>
                                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <label asp-for="InstructorId" class="form-label fw-bold"></label>
                                            <select asp-for="InstructorId" class="form-select" asp-items="ViewBag.Instructors">
                                                <option value="">-- Chọn giảng viên --</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <label asp-for="ShortDescription" class="form-label"></label>
                                        <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="mb-4">
                                        <label class="form-label fw-bold">Ảnh thumbnail</label>
                                        <input type="file" name="courseFile" class="form-control" accept="image/*" />
                                        <div class="mt-3 text-center">
                                            <img src="/uploads/course/default.png" class="img-thumbnail" style="width:100%; max-height:200px; object-fit:cover;" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="text-end mt-4">
                                <button type="submit" class="btn btn-success btn-lg px-5">Tạo khóa học</button>
                                <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Hủy</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}