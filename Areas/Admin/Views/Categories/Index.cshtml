@model IEnumerable<EduFlex.Models.Category>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh Sách Danh Mục</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a class="btn btn-success" asp-area="Admin" asp-controller="Categories" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>Thêm danh mục
                        </a>
                    </div>
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="card-body mt-4">
                        <table class="table table-hover table-bordered datatable" style="background-color: white;">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">ID</th>
                                    <th class="text-center">Icon</th>
                                    <th class="text-center">Tên danh mục</th>
                                    <th class="text-center">Mô tả</th>
                                    <th class="text-center">Danh mục cha</th>
                                    <th class="text-center">Trạng thái</th>
                                    <th class="text-center">Ngày tạo</th>
                                    <th class="text-center">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var c in Model)
                                {
                                    <tr class="table-row">
                                        <td class="text-center align-middle">@c.CategoryId</td>
                                        <td class="text-center align-middle">
                                            <img src="@c.Icon" 
                                                alt="Icon @c.CategoryName" 
                                                class="rounded-circle border-none" 
                                                style="width: 40px; height: 40px; object-fit: cover;"
                                                onerror="this.src='/uploads/categories/default.png';" />
                                        </td>
                                        <td class="text-center align-middle text-primary fw-bold">@c.CategoryName</td>
                                        <td class="text-center align-middle">
                                            @if (!string.IsNullOrEmpty(c.Description))
                                            {
                                                <span title="@c.Description">
                                                    @(c.Description.Length > 50 ? c.Description.Substring(0, 50) + "..." : c.Description)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa có mô tả</span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            @if (c.ParentCategory != null)
                                            {
                                                <span class="badge bg-info">@c.ParentCategory.CategoryName</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Danh mục gốc</span>
                                            }
                                        </td> 
                                        <td class="text-center align-middle">
                                            @if (c.IsActive == true)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Hoạt động
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle me-1"></i>Khóa
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">@c.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                        <td class="text-center align-middle">
                                            <div class="btn-group" role="group">
                                                <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@c.CategoryId"
                                                   class="btn btn-primary btn-sm" title="Chỉnh sửa danh mục">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@c.CategoryId"
                                                   class="btn btn-danger btn-sm" title="Xóa danh mục">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    .table td {
        vertical-align: middle;
    }
    
    .table-row:hover {
        background-color: #f8f9fa;
    }
    
    .btn-group .btn {
        margin: 0 2px;
    }
    
    img.rounded-circle {
        border: 2px solid #dee2e6;
    }
</style>