@model EduFlex.Models.Category

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>@ViewData["Title"]</h2>
    </div>

    <section class="section dashboard">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thông Tin Danh Mục</h5>

                        <form asp-action="Delete" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="CategoryId" />

                            <div class="mb-3 text-center">
                                <label class="form-label d-block">Icon</label>
                                @if (!string.IsNullOrEmpty(Model.Icon))
                                {
                                    <img src="@Model.Icon" 
                                         alt="Icon @Model.CategoryName" 
                                         class="rounded-circle mb-2" 
                                         style="width:100px; height:100px; object-fit:cover;"
                                         onerror="this.src='/uploads/categories/default.png';" />
                                }
                                else
                                {
                                    <i class="bi bi-folder mb-2" style="font-size: 60px; color: #6c757d;"></i>
                                }
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Tên danh mục</label>
                                <input class="form-control" value="@Model.CategoryName" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Mô tả</label>
                                <textarea class="form-control" rows="3" readonly>@(Model.Description ?? "Chưa có mô tả")</textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Danh mục cha</label>
                                <input class="form-control" value="@(Model.ParentCategory?.CategoryName ?? "Danh mục gốc")" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Trạng thái</label>
                                <input class="form-control" value="@(Model.IsActive == true ? "Hoạt động" : "Khóa")" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Ngày tạo</label>
                                <input class="form-control" value="@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")" readonly />
                            </div>

                            <div class="alert alert-warning" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác. Danh mục sẽ bị xóa vĩnh viễn.
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Xác nhận xóa
                                </button>
                                <a asp-action="Index" class="btn btn-secondary ms-2">
                                    <i class="bi bi-x-circle"></i> Hủy
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    .form-control[readonly] {
        background-color: #e9ecef;
        opacity: 1;
    }
    
    img.rounded-circle {
        border: 2px solid #dee2e6;
    }
    
    .alert-warning {
        border-left: 4px solid #ffc107;
    }
</style>