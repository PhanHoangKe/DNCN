@model EduFlex.Models.Category

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>@ViewData["Title"]</h2>
    </div>

    <section class="section dashboard">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thông Tin Danh Mục</h5>

                        <form asp-action="Delete" method="post" onsubmit="return confirmDelete()">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="CategoryId" />

                            <div class="mb-3 text-center">
                                <label class="form-label d-block">Icon</label>
                                @if (!string.IsNullOrEmpty(Model.Icon))
                                {
                                    <img src="@Model.Icon" 
                                         alt="Icon @Model.CategoryName" 
                                         class="rounded-circle mb-2" 
                                         style="width:100px; height:100px; object-fit:cover;"
                                         onerror="this.src='/uploads/categories/default.png';" />
                                }
                                else
                                {
                                    <i class="bi bi-folder mb-2" style="font-size: 60px; color: #6c757d;"></i>
                                }
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Tên danh mục</label>
                                <input class="form-control" value="@Model.CategoryName" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Mô tả</label>
                                <textarea class="form-control" rows="3" readonly>@(Model.Description ?? "Chưa có mô tả")</textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Danh mục cha</label>
                                <input class="form-control" value="@(Model.ParentCategory?.CategoryName ?? "Danh mục gốc")" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Trạng thái</label>
                                <input class="form-control" value="@(Model.IsActive == true ? "Hoạt động" : "Khóa")" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Ngày tạo</label>
                                <input class="form-control" value="@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")" readonly />
                            </div>

                            @if (ViewBag.RelatedCourses != null && ViewBag.RelatedCoursesCount > 0)
                            {
                                <div class="mb-3">
                                    <label class="form-label fw-bold text-danger">Khóa học liên quan (@ViewBag.RelatedCoursesCount khóa học)</label>
                                    <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                                        @foreach (var course in ViewBag.RelatedCourses)
                                        {
                                            <div class="d-flex justify-content-between align-items-center py-1 border-bottom">
                                                <span>@course.CourseTitle</span>
                                                <span class="badge @(course.IsPublished == true ? "bg-success" : "bg-secondary")">
                                                    @(course.IsPublished == true ? "Đã xuất bản" : "Chưa xuất bản")
                                                </span>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="deleteRelatedCourses" name="deleteRelatedCourses" value="true">
                                        <label class="form-check-label text-danger fw-bold" for="deleteRelatedCourses">
                                            <i class="bi bi-exclamation-triangle me-1"></i>
                                            Xóa tất cả khóa học liên quan cùng với danh mục này
                                        </label>
                                    </div>
                                    <div class="form-text text-muted">
                                        <strong>Lưu ý:</strong> Nếu không chọn tùy chọn này, bạn sẽ không thể xóa danh mục vì còn có khóa học thuộc danh mục này.
                                    </div>
                                </div>
                            }

                            <div class="alert alert-warning" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác. 
                                @if (ViewBag.RelatedCourses != null && ViewBag.RelatedCoursesCount > 0)
                                {
                                    <span>Danh mục và tất cả khóa học liên quan sẽ bị xóa vĩnh viễn.</span>
                                }
                                else
                                {
                                    <span>Danh mục sẽ bị xóa vĩnh viễn.</span>
                                }
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-danger" id="confirmDeleteBtn">
                                    <i class="bi bi-trash"></i> Xác nhận xóa
                                </button>
                                <a asp-action="Index" class="btn btn-secondary ms-2">
                                    <i class="bi bi-x-circle"></i> Hủy
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    .form-control[readonly] {
        background-color: #e9ecef;
        opacity: 1;
    }
    
    img.rounded-circle {
        border: 2px solid #dee2e6;
    }
    
    .alert-warning {
        border-left: 4px solid #ffc107;
    }
    
    .form-check-input:checked {
        background-color: #dc3545;
        border-color: #dc3545;
    }
</style>

@section Scripts {
    <script>
        function confirmDelete() {
            console.log('confirmDelete function called!');
            
            var hasRelatedCourses = @((ViewBag.RelatedCourses != null && ViewBag.RelatedCoursesCount > 0) ? "true" : "false");
            var courseCount = @(ViewBag.RelatedCoursesCount ?? 0);
            var isDeleteRelatedChecked = document.getElementById('deleteRelatedCourses').checked;
            
            console.log('hasRelatedCourses:', hasRelatedCourses);
            console.log('courseCount:', courseCount);
            console.log('isDeleteRelatedChecked:', isDeleteRelatedChecked);
            
            var confirmMessage = '';
            
            if (hasRelatedCourses) {
                if (isDeleteRelatedChecked) {
                    confirmMessage = `Bạn có chắc chắn muốn xóa danh mục "${@Model.CategoryName}" và TẤT CẢ ${courseCount} khóa học liên quan không?\n\n` +
                                  'Hành động này KHÔNG THỂ hoàn tác và sẽ xóa vĩnh viễn:\n' +
                                  '• Danh mục: ' + '@Model.CategoryName' + '\n' +
                                  '• Số khóa học: ' + courseCount;
                    
                    console.log('Showing confirm dialog...');
                    if (confirm(confirmMessage)) {
                        console.log('User confirmed deletion with related courses');
                        // Thêm hidden input để gửi thông tin xóa khóa học liên quan
                        var hiddenInput = document.createElement('input');
                        hiddenInput.type = 'hidden';
                        hiddenInput.name = 'deleteRelatedCourses';
                        hiddenInput.value = 'true';
                        document.querySelector('form').appendChild(hiddenInput);
                        console.log('Form will be submitted...');
                        return true; // Cho phép form submit
                    } else {
                        console.log('User cancelled deletion');
                        return false; // Ngăn form submit
                    }
                } else {
                    alert('Bạn phải chọn tùy chọn "Xóa tất cả khóa học liên quan" để có thể xóa danh mục này!');
                    return false; // Ngăn form submit
                }
            } else {
                confirmMessage = `Bạn có chắc chắn muốn xóa danh mục "${@Model.CategoryName}" không?\n\n` +
                               'Hành động này KHÔNG THỂ hoàn tác!';
                
                console.log('Showing confirm dialog...');
                if (confirm(confirmMessage)) {
                    console.log('User confirmed deletion without related courses');
                    console.log('Form will be submitted...');
                    return true; // Cho phép form submit
                } else {
                    console.log('User cancelled deletion');
                    return false; // Ngăn form submit
                }
            }
        }
    </script>
}